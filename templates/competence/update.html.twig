{% extends 'baseAdmin.html.twig' %}

{% block title %}Modifier une catégorie{% endblock %}

{% block body %}

    <h1 class="mb-5">Modifier catégorie</h1>

    {# {{ form(competenceForm) }} #} 

    {{ form_start(competenceForm) }}

        <div class="row">
            <div class="col-4 offset-2">
                {{ form_row(competenceForm.title) }}
            </div>
            <div class="col-4">
                {{ form_row(competenceForm.img) }}
            </div>
        </div>

        <div class="row">
            <div class="col-8 offset-2">
                {{ form_row(competenceForm.category) }}
            </div>
        </div>
        <div class="row">
            <div class="col-8 offset-2 text-end">
                <a href="{{path('admin_index')}}" class="btn btn-outline-danger me-3" >Annuler</a>
                <button class="btn btn-success">
                    Modifier
                </button>
            </div>
        </div>

    {{ form_end(competenceForm) }}

{% endblock %}
